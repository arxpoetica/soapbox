html
	font-size 10px
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
	background-color $mainBackgroundColor
body
	margin 0
	padding 83px 15px 65px
	color $color
	background-color $mainBackgroundColor
	font $baseFont/$baseLineHeight $baseFontFamily
	// only for everything light on dark
	// See: http://www.usabilitypost.com/2012/11/05/stop-fixing-font-smoothing/
	-webkit-font-smoothing antialiased
header
	position fixed
	top 0
	left 0
	width 100%
	height 65px
	background-color $colorMode1
	border-bottom 3px solid $colorMode2
	// box-shadow 0 0 10px #888
	overflow hidden
.logo
	display block
	float left
	margin 10px 15px 0
	width unit(1244/2, 'px')
	height unit(100/2, 'px')
	background url('../img/logo.png') no-repeat 0 0 transparent
	background-size 100%
	h1
		font-size 0
		margin 0
		opacity 0
.navigation
	float right
	margin 15px 15px 0
	font-size 20px
	ul
		overflow hidden
	li
		float left
		padding 2px 10px
		border-left 3px solid white
		&:first-child
			border 0 none
	iframe
		margin 4px -15px 0 0
	// for zigbots in home rooms about github
	// 	.{zigbots}
	// 		background-color red
.container
	// margin 0 15px 15px
	padding 15px
	// min-height 400px
	// background-color rgba(255, 82, 0, 0.2)
	background-color rgba(255, 82, 0, 0.075)
	// border 1px solid rgba(255, 82, 0, 1)
footer
	position fixed
	left 0
	bottom 0
	width 100%
	margin 15px 0 0
	padding 15px
	background-color $colorMode1
	border-top 3px solid $colorMode2
	text-align right
	$boxSizing(border-box)
	*
		font-size 12px



.chatBox
	width 33%
#chatInput
	width 100%
	border 2px solid rgba(0, 200, 255, 1)
	$boxSizing(border-box)
#chatLog
	height 400px
	border 2px solid rgba(0, 200, 255, 1)
	overflow auto



.signup
	// label
	// #email
	.message
		display inline-block
		margin 0 0 0 8px
		font-size 1.2rem
		font-weight 700
		color black
		text-transform uppercase
		white-space nowrap

.nosupport
	display none

.leaderBoard
	.gravatar
		width 100px
		height 100px
		$borderRadius(100%)

.me
	border 4px solid green
	width 100px
	height auto
.them
	border 4px solid red
.lonely
	display none
#whoCall
#hangup
	display none

video
	width 200px
	height 200px
